# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_GROUP_CHAT_ID=your_group_chat_id_here
TELEGRAM_ALLOWED_USER_IDS=123456789,987654321

# MQTT Source Broker (Mosquitto)
# Для Docker Compose используйте имя сервиса 'mosquitto'
# Для локального запуска используйте 'localhost'
MQTT_SOURCE_HOST=mosquitto
MQTT_SOURCE_PORT=1883
MQTT_SOURCE_USERNAME=
MQTT_SOURCE_PASSWORD=
MQTT_SOURCE_TOPIC=msh/2/json/#
MQTT_SOURCE_CLIENT_ID=meshtastic-telegram-bot
MQTT_SOURCE_KEEPALIVE=60
MQTT_SOURCE_QOS=1

# MQTT Proxy Targets (можно добавить несколько, используя префиксы)
# Пример для первого прокси:
MQTT_PROXY_TARGET_NAME=external_broker_1
MQTT_PROXY_TARGET_HOST=external.mqtt.broker.com
MQTT_PROXY_TARGET_PORT=1883
MQTT_PROXY_TARGET_USERNAME=
MQTT_PROXY_TARGET_PASSWORD=
MQTT_PROXY_TARGET_TOPIC_PREFIX=
MQTT_PROXY_TARGET_CLIENT_ID=
MQTT_PROXY_TARGET_ENABLED=true
MQTT_PROXY_TARGET_QOS=1

# Application Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

